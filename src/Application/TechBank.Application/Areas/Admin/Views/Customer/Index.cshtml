@using TechBank.DomainModel
@model IEnumerable<AppCustomer>
@{
    ViewData["Title"] = "Customer Index";
}

<div class="container p-3">
    <div class="row p-2">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
</div>

<table class="table table-border table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>Name</th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 30%">@item.User.Contact.FullName</td>                
                <td style="width: 15%">
                    <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.EntityPublicKey" class="btn btn-outline-primary btn-sm me-3"> <i class="bi bi-pencil-square"></i></a>
                    @*<a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"> <i class="bi bi-trash-fill"></i></a>*@
                </td>
                
            </tr>
        }
    </tbody>
</table>

